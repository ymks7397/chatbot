root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
insert_final_newline = false

[*.html]
indent_style = tab
indent_size = 2

[*.{js,tex}]
trim_trailing_whitespace = true
insert_final_newline = true

[*.{md,tex}]
indent_style = space
indent_size = 4
